# editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 80

[*.diff]
trim_trailing_whitespace = false

[*.lua]
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
max-line-length = 120

[*.py]
indent_style = space
indent_size = 4

[*.txt]
indent_style = tab
indent_size = 4
